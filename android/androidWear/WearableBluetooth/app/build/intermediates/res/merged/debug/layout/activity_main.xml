<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smr.wearablebluetooth.MainActivity"
    tools:deviceIds="wear_round"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:rotation = "60"
        android:layout_width="93dp"
        android:layout_height="163dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1"
        tools:layout_editor_absoluteY="17dp"
        app:layout_constraintVertical_bias="0.507">

        <TextView
            android:id="@+id/capacityValue"
            android:layout_width="match_parent"
            android:layout_height="010dp"
            android:gravity="center"
            android:text="Waiting to connect"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="37dp"
            android:layout_weight="1.32" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23sp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <Button
                android:id="@+id/connectionButton"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/circle"
                android:onClick="onClickToggleConnection"
                android:textSize="12sp"
                android:text="connect" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>